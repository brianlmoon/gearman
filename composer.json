{
  "name": "brianlmoon/gearman",
  "homepage": "http://brian.moonspot.net/GearmanManager",
  "description": "PHP library for interfacing with Gearmand",
  "keywords": [
    "gearman",
    "gearman-manager"
  ],
  "type": "library",
  "license": "BSD-2-Clause",
  "authors": [
    {
      "name": "Brian Moon",
      "homepage": "http://brian.moonspot.net"
    }
  ],
  "support": {
    "issues": "https://github.com/brianlmoon/gearman/issues"
  },
  "require": {
    "php": "^8.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^10"
  },
  "autoload": {
    "psr-4": {
      "Moonspot\\Gearman\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Moonspot\\Gearman\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "phan": [
      "phan"
    ],
    "test": [
      "parallel-lint src/ tests/",
      "phpunit --colors=never"
    ],
    "lint": [
      "parallel-lint src/ tests/"
    ],
    "fix": [
      "php-cs-fixer fix --config .php-cs-fixer.dist.php src tests"
    ]
  }
}
